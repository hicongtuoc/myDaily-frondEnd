# Check Prettier standards
npm run prettier ||
(
    echo 'ğŸ¤¡ Run npm run prettier:fix to format your code then add changes and try commit again.';
    false;
)

# Check ESLint Standards
npm run lint ||
(
    echo 'ğŸ¤¡ ESLint Check Failed. Make the changes required above.'
    false;
)

# Check tsconfig standards
npm run check-types ||
(
    echo 'ğŸ¤¡ Failed Type check. Make the changes required above.'
    false;
)

# If everything passes... Now we can commit
